{
  "manifest_version": 3,
  "name": "TokMoney",
  "version": "1.0",
  "description": "Affiche une estimation des revenus pour chaque vid√©o TikTok directement sur la page",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["*://*.tiktok.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.tiktok.com/*"],
      "js": ["content-script.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  }
}